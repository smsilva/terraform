#!/bin/sh

CONFIGURATION_FILE="$1"

if [ ! -e ${CONFIGURATION_FILE?} ]; then
  echo "File not found: ${CONFIGURATION_FILE?}."
  exit 1
fi

while read -r LINE; do
  KEY_NAME=$(echo ${LINE} | awk -F "=" '{ print $1 }' | tr "[:lower:]" "[:upper:]")
  KEY_VALUE=$(echo ${LINE} | awk -F "=" '{ print $2 }')
  echo "export ${KEY_NAME}=${KEY_VALUE}" >> /stack/env.conf
done < "${CONFIGURATION_FILE?}"
